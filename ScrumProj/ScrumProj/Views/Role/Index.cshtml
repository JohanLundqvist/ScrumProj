
@model IEnumerable<ScrumProj.Models.ProfileModel>

@if (User.Identity.IsAuthenticated)
{
    Layout = "~/Views/Shared/_navbarSignedIn.cshtml";
}

@{
    ViewBag.Title = "Index";
}



<h2>Lista Användare</h2>

<hr style="border-color: #777;" />

<h4>Här listas alla användare som väntar på att accepteras</h4>

@if (User.IsInRole("SuperAdmin"))
{
    @Html.ActionLink("Hantera roller", "ManageRoles")
}

<hr style="border-color: #777;" />
<br />


<div class="form-horizontal">
    @foreach (var profile in Model)
    {
        <div class="form-group">
            <input type="button" class="btn btn-outline-warning" value="Acceptera användare" onclick="location.href='@Url.Action("AcceptUser", "role", new { id = profile.ID })'" />
            <a class="btn btn-outline-warning" href="@Url.Action("RemoveUser", "role", new { id = profile.ID })" onclick="return confirm('Är du säker att du vill ta bort den här användaren?')">Ta bort användare</a>
            <span style="font-size: 22px;">@Html.Label(profile.FirstName + " " + profile.LastName, new { @class = "col-md-4" })</span>
        </div>
    }
</div>

<br />

<script>
    jQuery(document).ready(function () {
        jQuery('[data-confirm]').click(function (e) {
            if (!confirm(jQuery(this).attr("data-confirm"))) {
                e.preventDefault();
            }
        });
    });
</script>
