@model ScrumProj.Models.EntryViewModel
<div class="col-md-4">

    @if (Model.Categories != null)
    {
        foreach (var e in Model.CategoryIds)
        {
            if (e.EntryId == Model.entry.Id)
            {
                <ul style="list-style-type: none;">
                    @foreach (var c in Model.Categories)
                    {
                        if (e.CategoryId == c.Id)
                        {
                            <label>Ta bort kategori:</label>
                            <li>
                                <a href="@Url.Action("DeleteCategory", new {catId = e.Id, postId = Model.entry.Id} )"  class="list-group-item list-group-item-action flex-column align-items-start" style="padding: 5px; float:left">
                                    <small class="mb-1">@c.Name</small>
                                </a>
                            </li>
                        }
                    }
                </ul>
            }
        }
    }
</div>
